2.
n = 8
for i in range(n):
    for j in range(i+1):
        print(" ", end=" ")
    for j in range (i, n):
         print("*",end=" ")
    print() 

3. 
print(" " * 7 + "*")
for i in range(1, 7 +1):
    print(" " * (7 -i), end="")
    for j in range(i):
        print("*", end=".")
    print("*")



            
            
